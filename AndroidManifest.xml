<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.mrquiz.android.tinyurl"
    android:versionName="1.0.9"
    android:versionCode="10">
    <uses-sdk
        android:minSdkVersion="3"
        android:targetSdkVersion="7" />
    <supports-screens
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:anyDensity="true" />
    <uses-permission
        android:name="android.permission.INTERNET" />
<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"></uses-permission>
    <application
        android:label="@string/app_name"
        android:icon="@drawable/icon">
        <activity
            android:name="CreateTinyUrlActivity"
            android:theme="@android:style/Theme.Dialog"
            android:label="@string/title_create"
            android:excludeFromRecents="true">
            <intent-filter
                android:label="@string/label_main">
                <action
                    android:name="android.intent.action.MAIN" />
                <category
                    android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.mrquiz.android.tinyurl.SendTinyUrlActivity"
            android:theme="@android:style/Theme.Dialog"
            android:label="@string/title_share"
            android:excludeFromRecents="true">
            <intent-filter>
                <action
                    android:name="android.intent.action.SEND" />
                <category
                    android:name="android.intent.category.DEFAULT" />
                <data
                    android:mimeType="text/plain" />
            </intent-filter>
        </activity>
    </application>
</manifest> 
